<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.농업보조사업" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#2E7D32</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorSecondaryVariant">#E65100</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">#2E7D32</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Text appearance -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
        
        <!-- Enable edge-to-edge -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    
    <!-- Large button style for elderly users -->
    <style name="ElderlyButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    
    <!-- Large text style for elderly users -->
    <style name="ElderlyTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    
    <!-- Large EditText style for elderly users -->
    <style name="ElderlyEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>
    
</resources>