<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.농업보조사업" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#2E7D32</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorSecondaryVariant">#E65100</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">#2E7D32</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Text appearance for elderly users -->
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>